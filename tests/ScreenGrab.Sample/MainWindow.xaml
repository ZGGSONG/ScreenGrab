<Window
    x:Class="ScreenGrab.Sample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:taskbarnotification="clr-namespace:Hardcodet.Wpf.TaskbarNotification;assembly=Hardcodet.NotifyIcon.Wpf"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="ScreenGrab Sample"
    Width="800"
    Height="450"
    ui:TitleBar.ExtendViewIntoTitleBar="True"
    ui:TitleBar.Height="48"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Icon="/app.ico"
    Loaded="MainWindow_OnLoaded"
    Unloaded="MainWindow_OnUnloaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <taskbarnotification:TaskbarIcon
            Grid.Row="0"
            IconSource="/app.ico"
            TrayLeftMouseDown="OnOpenClick">
            <taskbarnotification:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        Click="Capture_Click"
                        Header="Grab"
                        InputGestureText="Win+Shift+X">
                        <MenuItem.Icon>
                            <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.ScreenCut_20_Regular}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem Click="OnExitClick" Header="Exit">
                        <MenuItem.Icon>
                            <ui:FontIcon Icon="{x:Static ui:FluentSystemIcons.ArrowExit_20_Regular}" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </taskbarnotification:TaskbarIcon.ContextMenu>
        </taskbarnotification:TaskbarIcon>
        <ui:SettingsCard Grid.Row="1" Margin="8">
            <ui:SettingsCard.Header>
                <StackPanel Orientation="Horizontal">
                    <Button
                        Margin="2,0"
                        Click="Capture_Click"
                        Content="Capture(Win+Shift+X)" />
                    <Button
                        Margin="2,0"
                        Click="Clean_Click"
                        Content="Clean" />
                    <CheckBox
                        Name="AuxiliaryCb"
                        Margin="2,0"
                        Content="Auxiliary"
                        IsChecked="True" />
                </StackPanel>
            </ui:SettingsCard.Header>
        </ui:SettingsCard>
        <ui:ScrollViewerEx Grid.Row="2" Margin="8">
            <Image x:Name="Img" />
        </ui:ScrollViewerEx>
    </Grid>
</Window>